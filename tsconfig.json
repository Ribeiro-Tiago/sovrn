{
	"compilerOptions": {
		"baseUrl": "./src",
		"lib": [
			"es2018"
		],
		"alwaysStrict": true,
		"allowJs": false,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"pretty": true
	},
	"exclude": [
		"node_modules",
		"test",
		".gitignore",
		".editorconfig"
	],
}
